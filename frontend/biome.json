{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "dist",
      "node_modules",
      "public",
      "src/client",
      "src/routeTree.gen.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "a11y": {
        "all": true
      },
      "complexity": {
        "all": true,
        "useLiteralKeys": "off"
      },
      "correctness": {
        "all": true,
        "noNodejsModules": "off",
        "noUndeclaredDependencies": "off",
        "useImportExtensions": "off"
      },
      "performance": {
        "all": true
      },
      "security": {
        "all": true
      },
      "style": {
        "all": true,
        "noDefaultExport": "off",
        "noNamespaceImport": "off",
        "noNonNullAssertion": "off",
        "useNamingConvention": "off",
        "useFilenamingConvention": {
          "level": "warn",
          "options": {
            "filenameCases": ["kebab-case"]
          }
        }
      },
      "suspicious": {
        "all": true,
        "noReactSpecificProps": "off"
      }
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    }
  }
}
